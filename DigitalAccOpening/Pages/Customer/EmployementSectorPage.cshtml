@page
@model DigitalAccOpening.Pages.Customer.EmployementSectorPageModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Residency Confirmation</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/Common2css.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/Radiobuttonslist.css" />
</head>
<body>
    <a href="#" class="go-back">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M15 8a.5.5 0 0 1-.5.5H2.707l3.647 3.646a.5.5 0 0 1-.708.708l-4.5-4.5a.5.5 0 0 1 0-.708l4.5-4.5a.5.5 0 1 1 .708.708L2.707 7.5H14.5A.5.5 0 0 1 15 8z" />
        </svg>
        Go Back
    </a>
    <div>
        <div class="container">
            <div class="card-icon">
                <div class="card">
                    <div class="chip"></div>
                    <div class="lines"></div>
                </div>
            </div>
            <h1 class="main-heading">What is your employement sector</h1>
            <form method="post">
                <div id="employementsector" class="dropdown-check-list">
                    <span class="anchor">Employement Sector</span>
                    <ul class="items">
                        
                        @foreach(var emp in Model.EmployementSectors)
                        {
                            <li>
                                <label>
                                    <input type="radio" name="employementsector"  value="@emp.EmployementSectorName"/>
                                    @emp.EmployementSectorName
                                </label>
                            </li>
                        }
                    </ul>
                </div>


                <button class="btn-continue">Continue</button>
            </form>
        </div>
    </div>
    <script>
        document.querySelector('.dropdown-check-list .anchor').addEventListener('click', function () {
            this.parentElement.classList.toggle('visible');
        });

        document.querySelectorAll('.dropdown-check-list .items li input[type="radio"]').forEach(function (radio) {
            radio.addEventListener('change', function () {
                var selectedCountry = this.parentElement.textContent.trim();
                document.querySelector('.dropdown-check-list .anchor').textContent = selectedCountry;
                document.querySelector('.dropdown-check-list').classList.remove('visible');
            });
        });
    </script>
</body>
</html>
