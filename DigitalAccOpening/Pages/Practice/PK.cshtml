@page
@model DigitalAccOpening.Pages.Practice.PKModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Residency Confirmation</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .container {
            width: 100%;
            max-width: 1200px;
            padding: 20px;
            text-align: center;
            position: relative;
        }

        .icon {
            margin-bottom: 40px;
        }

            .icon img {
                width: 100px;
                height: 100px;
            }

        .question {
            font-size: 36px;
            font-weight: bold;
            color: #333;
            margin-bottom: 60px;
        }

        .btn-group {
            display: flex;
            justify-content: center;
            gap: 50px;
        }

            .btn-group button {
                padding: 20px 80px;
                font-size: 24px;
                border-radius: 8px;
                border: none;
                cursor: pointer;
                font-weight: bold;
                transition: background-color 0.3s ease;
            }

        .btn-no {
            background-color: #e0e0e0;
            color: #333;
        }

        .btn-yes {
            background-color: #2ba84a;
            color: white;
        }

        .btn-no:hover {
            background-color: #d4d4d4;
        }

        .btn-yes:hover {
            background-color: #24943e;
        }

        .go-back {
            position: absolute;
            top: 5px;
            right: 20px;
            text-decoration: none;
            font-size: 18px;
            color: #2ba84a;
            display: flex;
            align-items: center;
        }

            .go-back svg {
                margin-right: 10px;
            }

            .go-back:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="container">
        <a href="#" class="go-back">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M15 8a.5.5 0 0 1-.5.5H2.707l3.647 3.646a.5.5 0 0 1-.708.708l-4.5-4.5a.5.5 0 0 1 0-.708l4.5-4.5a.5.5 0 1 1 .708.708L2.707 7.5H14.5A.5.5 0 0 1 15 8z" />
            </svg>
            Go Back
        </a>
        <div class="icon">
            <img src="/images/flag.png" alt="">
        </div>
        <div class="question">
            Are you a resident Pakistani?
        </div>
        <div class="btn-group">
            <form method="post">
                <button type="submit" asp-page-handler="Yes"  class="btn-yes">Yes</button>
                <button type="submit" asp-page-handler="No"  class="btn-no">No</button>
            </form>
        </div>
    </div>
</body>
</html>